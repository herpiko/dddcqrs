FROM golang:1.17.4-buster

ENV GO111MODULE=on

ENV PROJECT_NAME ${PROJECT_NAME}
ENV APP_NAME ${APP_NAME}
ENV DB_HOST ${DB_HOST}
ENV DB_USER ${DB_USER}
ENV DB_PASS ${DB_PASS}
ENV DB_NAME ${DB_NAME}
ENV ELASTIC_ADDRESS ${ELASTIC_ADDRESS}
ENV GRPC_ADDRESS ${GRPC_ADDRESS}
ENV NATS_URL ${NATS_URL}

RUN mkdir -p /svc
WORKDIR /svc
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /svc/http cmd/http/main.go
EXPOSE 8000
CMD ["/svc/http"]
